@{
    ViewBag.Title = "Reset password confirmation";
    var errorMessage = ViewData["ErrorMessage"] != null ? ViewData["ErrorMessage"].ToString() : "";
}

<br /><br /><br />
<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-4 col-lg-4 col-center-block">
        <div class="rsSignInCard center-block">
            <h3>@ViewBag.Title</h3>
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <p><font color="red">@errorMessage</font></p>                
            }
            else
            {
                <p>
                    Your password has been reset.
                </p>
            }
            <a href="@Url.Action("Login", "Account")" class="btn btn-group-sm btn-info">Back To Login Page</a>
        </div>
    </div>
</div>

